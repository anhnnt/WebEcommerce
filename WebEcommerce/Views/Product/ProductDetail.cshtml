@model Database.DomainModel.Product

@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Main Content Area  -->
        <main class="main-content">
            <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1920x373.jpg">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <h2 class="breadcrumb-heading">Product Information</h2>
                                <ul>
                                    <li>
                                        <a asp-controller="Home" asp-action="Index">Home <i class="pe-7s-angle-right"></i></a>
                                    </li>
                                    <li>@Html.DisplayFor(model => model.Model)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="single-product-area section-space-top-100 section-space-bottom-95">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="single-product-img">
                                <div class="swiper-container single-product-slider">
                                    <div class="swiper-wrapper">
                                        <div class="swiper-slide">
                                            <a href="@Url.Content(Model.Picture)" class="single-img gallery-popup">
                                                <img class="img-full" src="@Url.Content(Model.Picture)" alt="Product Image">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 pt-9 pt-lg-0">
                            <div class="single-product-content">
                                <h2 class="title">@Html.DisplayFor(model => model.Model)</h2>
                                <div class="price-box pb-1">
                                    <span class="new-price text-primary">@Html.DisplayFor(model => model.Price)</span>
                                </div>
                                <p class="short-desc mb-6">Lorem ipsum dolor sit amet, consecte adipisicin elit, sed do
                                    eiusmod tempor incidi ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis
                                    nostrud exercita ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute
                                    irure dolor in reprehenderit in voluptate velit esse cillum dolore.
                                </p>
                                <ul class="quantity-with-btn pb-7">
                                    <li class="affiliate-btn-wrap">
                                        <a class="btn btn-custom-size xl-size btn-primary btn-secondary-hover rounded-0" href="javascript:void(0)">Add To Cart</a>
                                    </li>
                                </ul>
                                <div class="product-category product-tags text-matterhorn pb-4">
                                    <span class="title">Product Tags :</span>
                                    <ul>
                                        <li>
                                            <a href="javascript:void(0)">Phone</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="social-link align-items-center">
                                    <span class="title pe-3">Share:</span>
                                    <ul>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-pinterest-p"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-tumblr"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-dribbble"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Main Content Area End Here  -->
                            

